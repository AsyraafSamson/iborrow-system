{
  "name": "iborrow-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev worker.js --local",
    "dev:next": "next dev",
    "build": "next build",
    "build:cf": "next build && npx @cloudflare/next-on-pages",
    "start": "next start",
    "lint": "eslint",
    "d1:setup": "powershell -ExecutionPolicy Bypass -File ./setup-d1.ps1",
    "d1:init": "wrangler d1 execute iborrow --remote --file=./schema.sql",
    "d1:query": "wrangler d1 execute iborrow --remote --command",
    "d1:list": "wrangler d1 list",
    "pages:dev": "wrangler pages dev .vercel/output/static --compatibility-flag=nodejs_compat --binding DB=iborrow",
    "deploy": "wrangler deploy",
    "deploy:pages": "npm run build:cf && wrangler pages deploy .vercel/output/static --project-name=iborrow"
  },
  "dependencies": {
    "next": "^15.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20251202.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
